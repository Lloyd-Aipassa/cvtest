<MainLayout title="test">
	<section id="hero">
		<!-- <img src="/0x0.png" transition:name="image-e" alt=""> -->
		<h1>BLOG</h1>
	</section>
	<section id="blog">
		<ul>
			{
				posts.data.posts.nodes.map((post) => (
					<a href={post.slug}>
						<li>
							<div class="img-container">
								{
									<img
										src={
											post
												.featuredImage
												.node
												.sourceUrl
										}
										alt=""
									/>
								}
							</div>
							<div
								set:html={
									post.title
								}
								class="title-container"
							/>
							<div
								set:html={
									post.excerpt
								}
								class="content-container"
							/>
						</li>
					</a>
				))
			}
		</ul>
	</section>
</MainLayout>

