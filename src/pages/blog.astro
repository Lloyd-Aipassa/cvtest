---
import MainLayout from "../layouts/MainLayout.astro";

const gqlq = {
	query: `{
		posts {
    nodes {
      slug
      title
	  excerpt
      featuredImage {
        node {
          sourceUrl
        }
      }
    }
  }
		}`,
};

const response = await fetch("https://cvking.brooklynwebdesign.nl/graphql", {
	method: "POST",
	headers: {
		"Content-Type": "application/json",
	},
	body: JSON.stringify(gqlq),
});

const posts = await response.json();
