---
import MainLayout from "../layouts/MainLayout.astro";

export async function getStaticPaths() {
	const response = await fetch(
		"https://skyhighrecruitment.com/wp-json/wp/v2/posts?acf_format=standard"
	);
	const posts = await response.json();
	return posts.map((post) => ({
		params: {
			slug: post.slug,
		},
		props: {
			post,
		},
	}));
}


---

<MainLayout title={Astro.props.post.acf.korte_titel}>
	<div class="hero-container">
		<img src={Astro.props.post.acf.hero_afbeeldingHero} alt="" />
	</div>

	<span set:html={Astro.props.post.content.rendered} />
</MainLayout>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	.hero-container img {
		width: 100%;
	}
</style>
